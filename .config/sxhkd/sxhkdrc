#
# wm independent hotkeys
#

# terminal emulator
super + {Return,alt + Return}
	{alacritty,bspc rule -a \* -o state=floating && alacritty}

# different launcher's
{super,super + alt,super + ctrl} + @space
	{sh /home/lll2yu/.config/rofi/launchers/text/launcher.sh,sh /home/lll2yu/.config/scripts/splatmoji/splatmoji type,bwpyro --cache 0 --no-logging}

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

### Pulse Audio controls

#increase sound volume
XF86AudioRaiseVolume 
	 pactl set-sink-volume 0 +5% 
#decrease sound volume
XF86AudioLowerVolume 
	 pactl set-sink-volume 0 -5%
# mute sound
XF86AudioMute 
	 pactl set-sink-mute 0 toggle 

# Media player controls
{super,alt} + XF86AudioPlay 
	{rm /tmp/playerctlname,notify-send "$(cat /tmp/playerctlname ) is the currently selected music player"}
XF86AudioPlay 
	sh /home/lll2yu/.config/scripts/musicPlayPause
XF86AudioNext 
	sh /home/lll2yu/.config/scripts/musicNext
XF86AudioPrev 
	sh /home/lll2yu/.config/scripts/musicPrev
ctrl + alt + {KP_Left,KP_End}
	{sh /home/lll2yu/.config/scripts/musicSeekForward,sh /home/lll2yu/.config/scripts/musicSeekBackward}

# screenshot
{_,super,ctrl,alt} + Print
	{maim ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png;notify-send "Screenshot saved",maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png;notify-send "Screenshot saved",maim -s ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png ;notify-send "Screenshot saved",maim -s | xclip -selection clipboard -t image/png}

## toggle pointer allow focus
super + alt + p
	sh .config/scripts/toggleptrfocus.sh

## turn on vim speed mode (on by default when starting x)
super + alt + {0,9}
	{xmodmap ~/.config/scripts/speedswapperon,xmodmap ~/.config/scripts/speedswapperoff}

## calculator
super + alt + c
	galculator

## lock the screen
super + alt + BackSpace
	slock -m "Locked at  $(date "+%a %d, %H:%M:%S")"

## shutdown menu
super + ctrl + BackSpace
	sh ~/.config/rofi/powermenu/powermenu.sh

## launch firefox
super + alt + f
	firefox -p

## open cmst
super + alt + n
	cmst

## open ncpamixer
super + alt + b
	bspc rule -a \* -o state=floating && alacritty -e ncpamixer

## mocp
super + alt + m
	bspc rule -a \* -o state=floating && alacritty -e mocp
## lf file manager
super + alt + e
	bspc rule -a \* -o state=floating && alacritty -e lf

## update system
super + alt + u
	bspc rule -a \* -o state=floating && alacritty -e yay

##Radio
super + alt + {r,shift + r}
	{sh /home/lll2yu/.config/scripts/radio,kill $(cat /tmp/radio.pid ) && rm /tmp/radio.pid}

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus or send to the given desktop (using keypad keys)
super + {_,shift + }KP_{End,Down,Next,Left,Begin,Right,Home,Up,Prior}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

## position floating windows around
alt + KP_{End,Down,Next,Left,Begin,Right,Home,Up,Prior}
	~/.config/scripts/place_floating_window.sh {1-9}

