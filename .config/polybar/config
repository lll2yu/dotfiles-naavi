tray-background = ${colors.background}
tray-padding = 4

;Define Fonts

font-0 = FiraCode:pixelsize=10:weight=bold;2
font-1 = FontAwesome:size=10;2

;Modules

[module/bspwm]
type = internal/bspwm

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;

label-focused = %icon%
