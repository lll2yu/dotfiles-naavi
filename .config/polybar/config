;Import colors generated by pywal

[colors]
background = ${xrdb:color0:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color6:#222}
primary = ${xrdb:color2:#222}
primary-alt = ${xrdb:color3:#222}
secondary = ${xrdb:color4:#222}
secondary-alt = ${xrdb:color5:#222}
alert = ${xrdb:color3:#222}

;define bar(s)

[bar/main]
width = 100%
height = 16
radius = 2.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
module-margin-left = 1
module-margin-right = 0
modules-left = bspwm
modules-center = 
modules-right = backlight wlan wlanspeed battery pulseaudio date 

