label-focused-foreground = ${colors.foreground}

label-urgent = %icon%
label-urgent-padding = 1
label-urgent-foreground = ${colors.alert}

label-occupied = %icon%
label-occupied-padding = 1
label-occupied-foreground = ${colors.secondary}

label-empty = %icon%
label-empty-padding = 1
label-empty-foreground = ${colors.primary}

[module/backlight]
type = internal/backlight
card = intel_backlight
format = <label>

; hacky way, needs fix
label = "%{A4:light -A 5:} %{A}%{A5:light -U 5:}%percentage%%%{A}"
label-foreground = ${colors.primary}
label-background = ${colors.background}

[module/wlanspeed]
type = internal/network
interface = wlp6s0
interval = 3.0

label-connected =%downspeed:8% %upspeed:8%
label-connected-foreground = ${colors.secondary}
label-connected-background = ${colors.background}

[module/wlan]
type = internal/network
interface = wlp6s0
interval = 3.0

format-connected-prefix = "  "
format-connected-prefix-foreground = ${colors.primary-alt}
format-connected-prefix-background = ${colors.background}

label-connected = %essid%
label-connected-foreground = ${colors.primary-alt}
label-connected-background = ${colors.background}

label-disconnected = not connected
label-disconnected-foreground =${colors.alert}

[module/date]
type = internal/date
interval = 5

date = " %b %d"

time= %l:%M %P

label = "%{A1:sh ~/.config/scripts/calander.sh:}%date%,%time%%{A}"
label-foreground = ${colors.primary-alt}
label-background = ${colors.background}

[module/pulseaudio]
